<p id="notice"><%= notice %></p>

<h1>User Roles</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Role</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_roles.each do |user_role| %>
      <tr>
        <td><%= user_role.id %></td>
        <td><%= link_to user_role.user.first_name + ' ' + user_role.user.last_name, user_path(user_role.id) %></td>
        <td><%= user_role.role.description %></td>
        <td>
          <% if user_role.small_group %>
            <%= user_role.small_group.leader.first_name + ' ' + user_role.small_group.leader.last_name + ' - ' + user_role.small_group.discipleship_community.night %>
          <% else %>
            N/A
          <% end %>
        </td>
        <td><%= link_to 'Show', user_role %></td>
        <td><%= link_to 'Edit', edit_user_role_path(user_role) %></td>
        <td><%= link_to 'Destroy', user_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

