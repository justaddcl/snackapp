<div class="header__gradient"></div>
<div class="header__content">
  <button class="header__menu" aria-label="Menu" role="button" aria-controls="navigation">
    <i class="header__menu-icon fas fa-bars"></i>
  </button>
  <div class="header__title">
    <%= link_to "SnackApp", root_path, class: "header__title-link" %>
  </div>
</div>
<nav class="nav nav-mobile" aria-hidden="true">
  <ul>
    <% if logged_in? %>
      <% if current_user.admin? %>
        <li><%= link_to "Users", users_path %></li>
        <li><%= link_to "User Roles", user_roles_path %></li>
        <li><%= link_to "Small Groups", small_groups_path %></li>
        <li><%= link_to "Discipleship Communities", discipleship_communities_path %></li>
      <% end %>
      <li><%= link_to "Events", events_path %></li>
      <li><%= link_to "Assignments", assignments_path %></li>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
      <li><%= link_to "Log out", logout_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Log in", login_path %></li>
    <% end %>
  </ul>
</nav>
