      <li class="nav-mobile__item"> link_to "Assignments", assignments_path </li>
      <li class="nav-mobile__item"> link_to "Account settings", edit_user_path(current_user) </li>
      <li class="nav-mobile__item"> link_to "Log out", logout_path, method: :delete </li>
