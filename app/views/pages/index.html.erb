<% provide(:title, "Home") %>
<div class="content-container">
  <div class="content-grid dashboard-container">
    <div class="dashboard-header">
      <img class="dashboard-header__avatar user-avatar user-avatar--48" src="https://source.unsplash.com/collection/8470962/48x48">
      <h1 class="dashboard-header__title">Hey, <span class="user-name"><%= @user.first_name %></span>!</h1>
    </div>
    <div class="reminder">
      <div class="reminder__title">Reminder!</div>
      <div class="reminder__content">You're signed up to bring a snack this Tuesday for the White Elephant Party</div>
    </div>
  </div>
  <div class="dashboard-events">
