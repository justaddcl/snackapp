<%= form_for(@event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :event_type %>
    <%= form.select :event_type_id, EventType.all.collect { |et| [ et.description, et.id ] } %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_field :start_time %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :gatherable_id %>
    <%= form.number_field :gatherable_id %>
  </div>

  <div class="field">
    <%= form.label :gatherable_type %>
    <%= form.text_field :gatherable_type %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
