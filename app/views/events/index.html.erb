<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Start time</th>
      <th>Event type</th>
      <th>Description</th>
      <th>Gatherable</th>
      <th>Gatherable type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.date %></td>
        <td><%= event.start_time %></td>
        <td><%= event.event_type %></td>
        <td><%= event.description %></td>
        <td><%= event.gatherable_id %></td>
        <td><%= event.gatherable_type %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

