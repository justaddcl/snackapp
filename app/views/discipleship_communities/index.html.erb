<% provide(:title, "Discipleship Communities") %>

<p id="notice"><%= notice %></p>

<h1>Discipleship Communities</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Pastor</th>
      <th>Meeting night</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discipleship_communities.each do |discipleship_community| %>
      <tr>
        <td><%= discipleship_community.id %></td>
        <td><%= discipleship_community.pastor.first_name + ' ' + discipleship_community.pastor.last_name %></td>
        <td><%= discipleship_community.night %></td>
        <td><%= link_to 'Show', discipleship_community %></td>
        <td><%= link_to 'Edit', edit_discipleship_community_path(discipleship_community) %></td>
        <td><%= link_to 'Destroy', discipleship_community, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discipleship Community', new_discipleship_community_path %>
